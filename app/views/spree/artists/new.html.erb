<% content_for :head do -%>
	<meta name="title" content="<%= Spree.t(:artist_signup) %>">
<% end -%>
<%= render 'spree/shared/error_messages', :target => @artist %>

<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h1><%= Spree.t(:artist_signup) %></h1>
		</div>
		<div class="panel">
			<%= render :partial => 'spree/signup_text' %>
		</div>
		<div id="new-artist" class="panel-body" data-hook="artist_fieldset_wrapper">
			<%= form_for @artist do |form| %>
				<div data-hook="signup_inside_form">
				<%= render :partial => 'spree/shared/artist_form', :locals => { :form => form } %>
				<p>
				<%= form.submit Spree.t(:signup), :class => 'btn btn-lg btn-success btn-block' %> 
				</p>
			</div>
		<% end %>
			<div class="text-center">
				<%= Spree.t('or') %> <%= link_to Spree.t('cancel'), spree.account_path %>
			</div>
			<div data-hook="login_extras"></div>
		</div>
	</div>
</div>
